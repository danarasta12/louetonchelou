<h1>Talents#index</h1>
<p>Find me in app/views/talents/index.html.erb</p>

<section class="search-filters">
  <!-- Ajoutez vos filtres de recherche ici si nÃ©cessaire -->
</section>

<section class="talent-list">
  <div class="row">
    <% @talents.each do |talent| %>
      <div class="col-md-3 talent-card">
        <a href="<%= talent_path(talent) %>" class="card-link">
          <div class="card">
            <% if talent.medias.attached?  %>
              <img src="<%= cl_image_path(talent.medias.first.key)%>" class="card-img-top" alt="Talent picture">
            <% else %>
              <img src="<%= asset_path('magicien.jpg')%>" class="card-img-top" alt="Talent picture">
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= talent.pseudo %></h5>
              <p class="card-text">Type: <%= talent.talent_type %></p>
              <p class="card-text">Working Area: <%= talent.working_area %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</section>
