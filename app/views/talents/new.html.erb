<div class="registration-form-container">
  <h2>Become a Chelou</h2>

  <%= simple_form_for @talent do |f| %>
    <div class="form-group">
      <%= f.input :pseudo, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :working_area, collection: [["Paris (75)", "75"], ["Hauts-de-Seine (92)", "92"], ["Seine-Saint-Denis (93)", "93"], ["Val-de-Marne (94)", "94"], ["Seine-et-Marne (77)", "77"], ["Yvelines (78)", "78"], ["Essonne (91)", "91"], ["Val-d'Oise (95)", "95"]], include_blank: "Select Working Area", class: "form-select", label_method: :first, value_method: :last %>
    </div>

    <div class="form-group">
      <%= f.input :talent_type, collection: ['Magicien', 'Cracheur de Feu', 'Dompteur de Serpent', 'Stripteaseur', 'Clown'], include_blank: "Select Talent type", class: "form-select" %>
    </div>

    <div class="form-group">
      <%= f.input :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :performance_duration, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :medias, "Medias" %>
      <%= f.file_field :medias, multiple: true, class: "form-control-file" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
