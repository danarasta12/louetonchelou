<%= simple_form_for @talent do |f| %>
  <%= f.input :pseudo %>
  <%= f.input :working_area, collection: [["Paris (75)", "75"], ["Hauts-de-Seine (92)", "92"], ["Seine-Saint-Denis (93)", "93"], ["Val-de-Marne (94)", "94"], ["Seine-et-Marne (77)", "77"], ["Yvelines (78)", "78"], ["Essonne (91)", "91"], ["Val-d'Oise (95)", "95"]], include_blank: "Select Working Area", label_method: :first, value_method: :last %>
  <%= f.input :talent_type, as: :select, collection: ['Magicien', 'Cracheur de Feu', 'Dompteur de Serpent', 'Stripteaseur', 'Clown'], include_blank: "Select Talent type" %>
  <%= f.input :price %>
  <%= f.input :performance_duration %>
  <%= f.input :medias, as: :file, input_html: { multiple: true } %>
  <%= f.input :description, as: :text %>

  <%= f.button :submit, class: "btn btn-flat" %>
<% end %>
