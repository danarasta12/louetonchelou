<div class="container">
  <h2><%= @talent.pseudo %></h2>
  <div class="talent-infos-recap">
    <p><%= @talent.working_area %></p>
    <p><%= @talent.talent_type %></p>
    <% if @talent.reviews.any? %>
      <% total_ratings = @talent.reviews.pluck(:rating).compact.sum %>
      <% average_rating = total_ratings.to_f / @talent.reviews.count %>
      <p> <%= average_rating.round(2) %><i class="fa-solid fa-star"></i></p>
    <% else %>
      <p> No ratings yet </p>
    <% end %>
    <p>Nombre de reviews : <%= @talent.reviews.length %></p>
  </div>
</div>

<div class="container">
  <div class="parent">
    <div class="big-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @talent.medias.attached? ? cl_image_path(@talent.medias.first.key) :asset_path('mimi.jpg') %>)"></div>
    <div class="small-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @talent.medias.attached? ? cl_image_path(@talent.medias.first.key) :asset_path('mimi.jpg') %>)"></div>
    <div class="small-photo-top-right" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @talent.medias.attached? ? cl_image_path(@talent.medias.first.key) :asset_path('mimi.jpg') %>)"></div>
    <div class="small-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @talent.medias.attached? ? cl_image_path(@talent.medias.first.key) :asset_path('mimi.jpg') %>)"></div>
    <div class="small-photo-bottom-right" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @talent.medias.attached? ? cl_image_path(@talent.medias.first.key) :asset_path('mimi.jpg') %>)"></div>
  </div>
</div>


<div class="container">
  <div class="content">
    <div class="left-info">
      <div class="pseudo-picture">
        <h3><%= @talent.pseudo %></h3>
        <% if @user.profile_picture.attached? %>
          <img class="avatar" src="<%= cl_image_path(@user.profile_picture.key) %>" alt="">
        <% else %>
          <%= asset_path('mimi.jpeg') %>
        <% end %>
      </div>
      <div class="talent">
        <h5><%= @talent.talent_type %></h5>
      </div>
      <p><%= @talent.description %></p>
      <div class="reviews">
         <% @talent.reviews.each do |review| %>
          <div class="comment">
            <p><%= review.comment %></p>
            <p><%= review.rating %><i class="fa-solid fa-star"></i></p>
          </div>
        <% end %>
      </div>
    </div>
    <div class="right-info">
      <div class="card-book">
        <h4><%= number_with_precision(@talent.price, precision: 2)%>â‚¬</h4>
        <div class="ratings">
          <% if @talent.reviews.any? %>
            <% total_ratings = @talent.reviews.pluck(:rating).compact.sum %>
            <% average_rating = total_ratings.to_f / @talent.reviews.count %>
            <p> <%= average_rating.round(2) %><i class="fa-solid fa-star"></i></p>
          <% else %>
            <p> No ratings yet </p>
          <% end %>
          <p><strong><%= @talent.reviews.length %></strong> reviews</p>
        </div>
        <div class="form-wrapper">
          <h3>Book <%= @talent.pseudo %></h3>
          <%= simple_form_for [@talent, @booking] do |f| %>
            <%= f.input :start_date, as: :string, class: "start_date",
                        required:  false,
                        input_html: { data: { controller: "datepicker" } } %>
            <%= f.input :end_date, as: :string, class: "end_date",
                        required: false,
                        input_html: { data: { controller: "datepicker" } } %>
            <%= f.submit class: "btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


